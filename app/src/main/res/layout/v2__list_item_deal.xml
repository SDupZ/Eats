<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_image"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/list_item_buisness_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_below="@id/list_item_image"

        android:layout_toLeftOf="@+id/list_item_price"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/list_item_small_deal_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:layout_alignParentLeft="true"
        android:layout_below="@id/list_item_buisness_name"
        android:layout_toLeftOf="@+id/list_item_price"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="5dp"
        android:layout_below="@id/list_item_image"
        android:layout_alignParentRight="true"/>

</RelativeLayout>