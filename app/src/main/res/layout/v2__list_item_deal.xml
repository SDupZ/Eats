<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_container"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/list_item_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:background="@drawable/toolbar_trans_grad"
        tools:src="@drawable/ic_image_loading"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/main_transparent_black"/>

    <RelativeLayout
        android:id="@+id/view_group"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/list_item_buisness_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:layout_above="@+id/list_item_small_deal_description"
            tools:text="Business Name"/>

        <TextView
            android:id="@+id/list_item_small_deal_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            tools:text="Small description"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            tools:text="$4.5" />

    </RelativeLayout>

</RelativeLayout>