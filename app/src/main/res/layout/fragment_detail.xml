<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdp.apps.eats.activities.DetailActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_logo"/>

            <LinearLayout
                android:id="@+id/viewgroup_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/detail_image"
                android:padding="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/main_transparent_black"
                    android:padding="2dp">
                    <TextView
                        android:id="@+id/detail_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="12dp"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white"
                        tools:text="Subway"/>
                    <TextView
                        android:id="@+id/detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"

                        tools:text="$10"/>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/detail_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="12dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/subtitle_grey"
                    android:background="@color/main_transparent_black"
                    tools:text="Description of the deal. Yep this is a deal. More stuff to describe"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewgroup_voucher_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/viewgroup_description"
                android:padding="4dp">

                <TextView
                    android:id="@+id/voucher_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="12dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/subtitle_grey"
                    android:background="@color/main_transparent_black"
                    android:text="Voucher code: 12345"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewgroup_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/viewgroup_voucher_code"
                android:padding="4dp">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="12dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/subtitle_grey"
                    android:background="@color/main_transparent_black"
                    android:text="Location Information"/>

            </LinearLayout>
        </RelativeLayout>
        </ScrollView>
</LinearLayout>
