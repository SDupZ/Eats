<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdp.apps.eats.DetailActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ic_launcher"
        android:layout_weight="1"/>.

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/detail_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="12dp"
                android:layout_weight="1"
                android:text="Test"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/subtitle_grey"/>
            <TextView
                android:id="@+id/detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="$10"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/subtitle_grey"/>
        </LinearLayout>

        <TextView
            android:id="@+id/detail_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="12dp"
            android:text="Some Description of the deal here data asdt asd f asdf asdf asdf asd fa sdf asdf sadf"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/subtitle_grey"/>

    </LinearLayout>



</LinearLayout>
