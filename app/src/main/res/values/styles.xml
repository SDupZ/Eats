<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>

        <!-- Support library compatibility -->
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_color</item>

        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_color</item>
    </style>

    <!-- Theme for main activity needs to be done separetly since it has no actionbar-->
    <style name="ActionBar.Solid.Eats.MainActivity"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

</resources>
