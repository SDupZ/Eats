<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/grey</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Eats</item>
    </style>

    <style name="ActionBar.Solid.Eats"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_color</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="ActionBar.Solid.Eats.MainActivity"
        parent="@style/Theme.AppCompat.NoActionBar">
    </style>

</resources>
